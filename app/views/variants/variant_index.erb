<div class="well">
  <h2>Size and Price Options</h2>

  <% if !@creams.empty? %>
    <h3>Creams</h3>
    <% @creams.each do |cream| %>
      <p>
      <%= cream.size %> - $<%= cream.cost %> 
        <a href="/variants/<%= cream.id %>/edit">(edit)</a>
        <form method="POST" action="/variants/<%= cream.id %>/delete">
          <input id="hidden" type="hidden" name="_method" value="delete">
