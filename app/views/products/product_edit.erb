<div class="well">
  <h2>Edit Product</h2>
  <form method="POST" action="/products/<%= @product.id %>">
    <label>Product Name: </label>
    <input type="text" name="product[name]" value="<%= @product.name %>"><br>
    <br>

    <label>Product Type: </label><br>
    <% Product.types.each do |type| %>
      <input type="checkbox" name="product[product_type]" value="<%= type %>" <%='checked' if @product.product_type.include?(type) %>> <%= type %><br>
    <% end %>

    <br>

    <label>Oil(s): </label><br>
    <% Oil.all.each do |oil| %>
      <input type="checkbox" name="product[oil_ids][]" value="<%= oil.id %>" id="<%= oil.id %>" <%= 'checked' if @product.oils.include?(oil) %>> 
        <%= oil.name %>
      </input><br>
    <% end %>

    <input type="submit" value="submit">
  </form>
</div>